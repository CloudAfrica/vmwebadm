world:
	echo "Building world"
	gmake rel

update:
	git pull --rebase
	gmake bootstrap

manifest:
	cp static/manifest $(DESTDIR)/$(DESTNAME)

install: world
	echo "Building install"
	mkdir -p $(DESTDIR)/lib/svc/method
	mkdir -p $(DESTDIR)/lib/svc/manifest/system/
	mkdir -p $(DESTDIR)/fifo/js
	mkdir -p $(DESTDIR)/usr/sbin
	mkdir -p $(DESTDIR)/var/db/vmwebadm/images
	cp out/client/client.js out/server/server.js $(DESTDIR)/fifo/js
	cp -r static/* jslib $(DESTDIR)/fifo
	rm -r $(DESTDIR)/fifo/jslib/*/.git*
	mv $(DESTDIR)/fifo/data/vmwebadmd.xml $(DESTDIR)/lib/svc/manifest/system/
	mv $(DESTDIR)/fifo/vmwebadmd $(DESTDIR)/lib/svc/method/
	mv $(DESTDIR)/fifo/vmwebadm $(DESTDIR)/usr/sbin
	sed -i $(DESTDIR)/lib/svc/manifest/system/vmwebadmd.xml -e 's;!DEPLOY_PATH!;/lib/svc/method;g'
	sed -i $(DESTDIR)/usr/sbin/vmwebadm -e 's;!DEPLOY_PATH!;/fifo;g'
	sed -i $(DESTDIR)/lib/svc/method/vmwebadmd -e 's;!DEPLOY_PATH!;/fifo;g'

clean:
	gmake clean

.PHONY: manifest 
